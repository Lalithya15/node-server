apiVersion: apps/v1
kind: Deployment
metadata:
  name: nextapp-deployment
spec:
  replicas: 2
  selector:
    matchLabels:
      app: nextapp
  template:
    metadata:
      labels:
        app: nextapp
    spec:
      containers:
      - name: nextapp
        image: nextapp:local   # replace with your GHCR image if pushed
        ports:
        - containerPort: 4000
        readinessProbe:
          httpGet:
            path: /
            port: 4000
          initialDelaySeconds: 5
          periodSeconds: 10
        livenessProbe:
          httpGet:
            path: /
            port: 4000
          initialDelaySeconds: 15
          periodSeconds: 20

